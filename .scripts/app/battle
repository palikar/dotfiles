ws7="7: "


if [ ! $(emacsclient -e '(message "1")') ]; then
	# echo "yes"
	emacs --daemon
	# else
	# 	echo "no"
fi

i3-msg "workspace ${ws1}; exec rxvt-unicode"
sleep 1
